{% extends 'base.html.twig' %}

{% block title %}Edit Blog{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center my-4">Edit Blog</h1>

        {{ form_start(form) }}
        <div class="form-container">
            <div class="form-group">
                {{ form_label(form.title, 'Title') }}
                <div class="input-group">
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.text, 'Text') }}
                <div class="input-group">
                    {{ form_widget(form.text, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.description, 'Description') }}
                <div class="input-group">
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.category, 'Category') }}
                <div class="input-group">
                    {{ form_widget(form.category, {'attr': {'class': 'form-control custom-select'}}) }}
                </div>
            </div>
        </div>
        {{ form_end(form) }}

        <div class="text-center mt-4">
            <button class="btn btn-primary btn-lg">Update</button>
            <a href="{{ path('app_blog_index') }}" class="btn btn-secondary btn-lg ml-3">Back to list</a>
        </div>

        <div class="text-center mt-4">
            <form method="post" action="{{ path('app_blog_delete', {'id': blog.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ blog.id) }}">
                <button class="btn btn-danger btn-lg">Delete</button>
            </form>
        </div>
    </div>

    <style>
        .container {
            max-width: 900px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            font-weight: bold;
        }

        .form-control {
            padding: 10px;
            font-size: 14px;
        }

        .custom-select {
            appearance: none;
            -webkit-appearance: none;
            -moz-appearance: none;
        }

        .btn {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            border-radius: 4px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            color: white;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
            color: white;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

        .btn-danger {
            background-color: #dc3545;
            border: none;
            color: white;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        .text-center {
            text-align: center;
        }

        .my-4 {
            margin-top: 2rem;
            margin-bottom: 2rem;
        }

        .mt-4 {
            margin-top: 2rem;
        }

        .ml-3 {
            margin-left: 1rem;
        }
    </style>
{% endblock %}

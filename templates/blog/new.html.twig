{% extends 'base.html.twig' %}

{% block title %}New Blog{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center my-4">Create New Blog</h1>

        {{ form_start(form) }}
        <div class="form-container">
            <div class="form-group">
                {{ form_label(form.title, 'Blog Title') }}
                <div class="input-group">
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.text, 'Text') }}
                <div class="input-group">
                    {{ form_widget(form.text, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.description, 'Description') }}
                <div class="input-group">
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
        {{ form_end(form) }}

        <div class="text-center mt-4">
            <a href="{{ path('app_blog_index') }}" class="btn btn-success">Back to List</a>
        </div>
    </div>

    <style>
        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .form-container {
            margin-top: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-label {
            font-weight: bold;
            margin-bottom: 8px;
        }

        .input-group {
            margin-bottom: 10px;
        }

        .btn {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            color: white;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-success {
            background-color: #28a745;
            border: none;
            color: white;
            text-decoration: none;
        }

        .btn-success:hover {
            background-color: #218838;
        }

        .text-center {
            text-align: center;
        }
    </style>
{% endblock %}
